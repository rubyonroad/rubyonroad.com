      </section>

      <aside class="bg-dark" id="subscribe">
      <div class="container text-center">
        <h2>Stay tuned, launching very soon...</h2>
        <p>
        Enter your email, and I'll notify you the minute open the doors.
        </p>
      </div>
      <div class="container text-center">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
          <div class="row">
            <%= form_tag subscribe_path, remote: true, id: 'subscrib_form' do %>
              <div class="col-md-7 col-sm-7">
                <%= email_field_tag :email, nil, class: 'form-control input-lg', placeholder: 'Email adress...', required: true %>
                <p class="help-block" style="display:none;"></p>
              </div><!--7-->
              <div class="col-md-5 col-sm-5 ">
                <button class="btn btn-block btn-lg btn-primary">Subscribe</button>
              </div><!--5-->
            <% end %>
          </div><!--row-->
        </div><!--/6-->
      </div>
      </aside>

      <section id="contact">
      <div class="container">
